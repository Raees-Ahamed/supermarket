@model MySuperMarket.Web.ViewModel.OrderViewModel

<table id="EditOrderItemTable" class="table ">
    <thead>
        <tr>
            <th style="width:15%">Product</th>
            <th style="width:15%">Product Description</th>
            <th style="width:10%">Price</th>
            <th style="width:10%">Quantity</th>
            <th style="width:10%" class="text-center">Subtotal</th>
            <th style="width:9%"></th>
            <th style="width:6%"></th>
            <th style="width:6%"></th>
            <th style="width:6%"></th>
            <th style="width:20%"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var orderItem in Model.Items)
        {
            <tr class="orderItemList">
                <td data-th="Product">@orderItem.Product.Name</td>
                <td data-th="Description">@orderItem.Product.Description</td>
                <td data-th="Price">@orderItem.Product.CurrentPrice</td>
                <td data-th="Quantity">@orderItem.Quantity</td>
                <td data-th="Subtotal" class="text-center">@orderItem.TotalPrice</td>
                <td class="text-center" style="visibility:hidden;">@orderItem.Id</td>
                <td class="text-center" style="visibility:hidden;">@orderItem.ProductId</td>
                <td class="text-center" style="visibility:hidden;">@orderItem.OrderId</td>
                <td class="text-center" style="visibility:hidden;">@orderItem.IsDeleted</td>
                <td data-th="">
                    <a href="javascript:void(0)" class="Edit">Edit |</a>
                    <a href="javascript:void(0)" class="Delete"> Remove</a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td></td>
            <td></td>
            <td></td>
            <td>Grand Total:</td>
            <td class="text-center" id="GrandTotal">@Model.OrderTotal</td>
        </tr>
    </tfoot>
</table>